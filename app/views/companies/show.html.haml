- content_for :sidebar do
  = render :partial => "contacts/contact", :object => @company
  - shadowbox 'people_in_this_company', :class => 'sidebar_section' do
    - unless @company.people.blank?
      %h1= t 'companies.show.people_in_this_company', :name => @company.name
      %ul
        - for person in @company.people
          - content_tag_for(:li, person) do
            = link_to person.full_name, person
            %br
            %span.comment= person.title
    - else
      = link_to t('companies.show.new_person'), new_company_person_url(@company)
%h1
  .title_actions= link_to t('companies.show.back_to_contacts'), contacts_url
  = @company.name