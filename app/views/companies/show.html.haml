- title @company.name

#sidebar
  = render :partial => "contacts/contact", :object => @company
  - unless @company.people.empty?
    - shadowbox 'company_contacts', :class => 'sidebar_section' do
      %h1= t '.company_contacts', :name => @company.name, :default => 'Contacts at {{name}}'
      - for person in @company.people
        %p
          = link_to person.full_name, person
          %br
          %span.comment= person.title
      %p
        = link_to t('.new_contact', :default => 'New Contact'), new_company_person_url(@company)

#page.sidebar
  - shadowbox 'page_content' do
    = user_feedback
    .title_actions= link_to t('.back', :default => 'Back'), contacts_url
