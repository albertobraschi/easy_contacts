- title t('companies.new.title', :default => 'New Company')

#page.companies
  - shadowbox 'page_content' do
    = user_feedback
    .title_actions= link_to t('.cancel', :default => 'Cancel'), contacts_url
    - form_for @company do |form|
      = render form
      %hr
      %p
        = submit_tag t('.submit', :default => 'Save')
        &nbsp;|&nbsp;
        = link_to t('.cancel', :default => 'Cancel'), contacts_url, :class => 'red'
