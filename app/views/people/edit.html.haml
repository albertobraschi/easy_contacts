- title 'Contacts' do
  = t('.title', :default => '{{full_name}}', :full_name => @person.full_name)
  %span.comment= @person.title_description

#page.people
  - shadowbox 'page_content' do
    = user_feedback
    .title_actions= link_to t('.cancel', :default => 'Cancel'), @person
    - form_for @person do |form|
      = render :partial => form
      %hr
      %p
        = submit_tag t('.submit', :default => 'Save')
        &nbsp;|&nbsp;
        = link_to t('.cancel', :default => 'Cancel'), @person, :class => 'red'
