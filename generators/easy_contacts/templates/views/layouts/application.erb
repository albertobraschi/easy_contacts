<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Codebase [<%%= yield :title %>]</title>
    <%%= stylesheet_link_tag 'default', :media => :all %>
    <%%= stylesheet_link_tag 'layout', :media => :all %>
    <%%= stylesheet_link_tag 'elements', :media => :all %>
    <%%= stylesheet_link_tag 'navigation', :media => :all %>
    <%%= stylesheet_link_tag 'template', :media => :screen %>
    <%%= stylesheet_link_tag 'sessions', :media => :screen %>
    <%%= javascript_include_tag :all, :cache => true %>
    <%%= yield :header %>
  </head>
  <body>
    <table id="layout">
      <tr>
        <td id="head"colspan="2">
          <%%= render :partial => current_user %>
          <%%= yield :head %>
        </td>
      </tr>
      <tr>
        <td id="navigation_bar" colspan="2"><%%= easy_navigation :default %></td>
      </tr>
      <tr>
        <td id="messages" colspan="2">

        </td>
      </tr>
      <tr id="content">
        <td id="page">
          <%% if flash.has_key? :notice -%>
            <div class="flash">
              <%%= flash[:notice] %>
            </div>
          <%% end -%>
          <%% if flash.has_key? :error -%>
            <div class="flash error">
              <%%= flash[:error] %>
            </div>
          <%% end -%>
          <div class="shadow">
            <div class="shadow1">
              <div class="shadow2">
                <div class="shadow3">
                  <div id="page_content" class="container">
                    <%%= yield %>
                  </div><!-- #page_content .container -->
                </div><!-- .shadow3 -->
              </div><!-- .shadow2 -->
            </div><!-- .shadow1 -->
          </div><!-- .shadow -->
        </td>
        <td id="sidebar">
          <%%= yield :sidebar %>
        </td>
      </tr>
      <tr>
        <td colspan="2" id="footer"><%%= yield :footer %></td>
      </tr>
    </table>
  </body>
</html>
